<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registracija - Študentski opravilnik</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="/assets/css/style.css" rel="stylesheet" />
  </head>

  <body>
    <div
      class="container d-flex flex-column justify-content-center align-items-center vh-100"
    >
      <div class="card p-4" style="max-width: 400px; width: 100%">
        <h1 class="text-center mb-4">Registracija</h1>
        <form id="registrationForm">
          <div class="mb-3">
            <label for="username" class="form-label">Ime in priimek</label>
            <input
              type="text"
              class="form-control"
              id="username"
              placeholder="Vpišite vaše ime in priimek"
              required
            />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              id="email"
              placeholder="Vpišite vaš email račun"
              required
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Geslo</label>
            <input
              type="password"
              class="form-control"
              id="password"
              placeholder="Vpišite geslo"
              required
            />
          </div>
          <div class="mb-3">
            <label for="confirmPassword" class="form-label">Potrdi geslo</label>
            <input
              type="password"
              class="form-control"
              id="confirmPassword"
              placeholder="Potrdite vašo geslo"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary w-100">
            Registracija
          </button>
        </form>
        <div class="text-center mt-3">
          <p>Že imate račun? <a href="/login">Prijavite se tukaj</a></p>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
      document
        .getElementById("registrationForm")
        .addEventListener("submit", async (event) => {
          event.preventDefault();
          const username = document.getElementById("username").value;
          const email = document.getElementById("email").value;
          const password = document.getElementById("password").value;
          const confirmPassword =
            document.getElementById("confirmPassword").value;

          if (password !== confirmPassword) {
            alert("Gesli se ne ujemata!");
            return;
          }

          try {
            const response = await axios.post("/api/user/register", {
              username,
              email,
              password,
            });
            window.location.href = "/login";
          } catch (error) {
            alert(
              "Registracija ni uspela: " +
                (error.response?.data?.error || error.message)
            );
          }
        });
    </script>
  </body>
</html>
